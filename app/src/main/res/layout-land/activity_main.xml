<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

            <ImageView
                android:id="@+id/logoImage"
                android:contentDescription="@string/logoImage_ContentDescription"

                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:src="@drawable/logo">
            </ImageView>



                <ImageButton
                    android:id="@+id/menu_createCharacter"
                    android:contentDescription="@string/createCharacterButton_ContentDescription"

                    android:layout_below="@+id/logoImage"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5sp"

                    android:scaleType="fitXY"
                    android:src="@drawable/create_character_button"
                    android:onClick="onCreateCharacterButtonClicked"/>

                <ImageButton
                    android:id="@+id/menu_loadCharacter"
                    android:contentDescription="@string/createCharacterButton_ContentDescription"

                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginEnd="10sp"
                    android:layout_toEndOf="@+id/menu_createCharacter"
                    android:layout_alignBottom="@+id/menu_createCharacter"
                    android:layout_alignTop="@+id/menu_createCharacter"

                    android:scaleType="fitXY"
                    android:src="@drawable/create_character_button" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>